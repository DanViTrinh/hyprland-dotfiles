{
  "layer": "top", // Waybar at top layer
  "position": "bottom", // Waybar position (top|bottom|left|right)
  //"height": 30, // Waybar height (to be removed for auto height)
  "spacing": 4, // Gaps between modules (4px)
  "modules-left": [
    "network",
    "cpu",
    "memory",
    "temperature",
    "battery", // laptop
    "battery#bat2" // laptop
  ],
  "modules-center": [
    "hyprland/workspaces",
    "sway/scratchpad",
  ],
  "modules-right": [
    "backlight", // laptop
    "custom/media",
    "pulseaudio",
    "clock",
    "tray"
  ],
  // Modules configuration
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "warp-on-scroll": false,
    "format": "{name}: {icon}",
    "format-icons": {
      "1": "ÔÑ†",
      "2": "Ôâ®",
      "3": "ÔÑ°",
